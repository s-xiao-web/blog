div#banner-wrap {
  width: 264px;
  height: 404px;
  margin: 0 auto;
  background: red;
  perspective: 1000px;
}
#banner {
  width: 264px;
  height: 404px;
  color: #fff;
  margin: 0 auto;
  font-size: 50px;
  text-align: center;
  line-height: 500px;
  border-radius: 15px;
  background: #9393FF;
  transition: transform 0.2s linear;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.25);
}
